<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/b_main"
    android:orientation="vertical"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="38px"
        android:layout_marginBottom="12px"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt_activity_show"
            android:layout_width="132px"
            android:layout_height="36px"
            android:background="@drawable/select_statu_1"
            android:text="@string/process"
            android:textSize="14px"/>

        <Button
            android:id="@+id/bt_service_show"
            android:layout_width="132px"
            android:layout_height="36px"
            android:background="@drawable/select_statu_2"
            android:text="@string/service"
            android:textSize="14px"/>

    </LinearLayout>

    <com.newbee.launcher_lib.view.NoScrollViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>